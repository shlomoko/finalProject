<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="il.ac.huji.phonetime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".AlarmRec"
            android:process=":remote" >
        </receiver>

        <service
            android:name=".CheckRunningApp"
            android:exported="false" />

        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BlockedAppsActivity"
            android:label="@string/title_activity_blocked_apps"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="il.ac.huji.phonetime.MainActivity" />
        </activity>

        <!--<activity-->
            <!--android:name=".BlockAnAppActivity"-->
            <!--android:label="@string/title_activity_block_an_app"-->
            <!--android:parentActivityName=".BlockedAppsActivity"-->
            <!--android:theme="@style/AppTheme.NoActionBar" >-->
        <!--</activity>-->


    </application>

</manifest>